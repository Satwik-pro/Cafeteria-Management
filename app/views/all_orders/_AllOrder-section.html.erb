<% Order.order(:date).each do |order| %>
<% if order.user_id == @current_user.id %>
<div class="Order-Page">
  <div class="Row">Date of Order: <%= order.date %></div>
  <div class="Row">Order ID: <%= order.id %></div>
  <div class="Row">Status: <%= order.delivered ? "Delivered" : "On The Way" %></div>
</div>
<% end %>
<% end %>
